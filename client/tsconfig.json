{
	"compilerOptions": {
		// "strict": true,   /* enable all strict type-checking options */		
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,		
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		// "rootDir": ".",
		"rootDirs": ["src", "../common/src/."],
		// "baseUrl": ".",
		// "paths": {
		// 	"*": ["./*", "../common/*"]
		// },
		"outDir": "out",
		"lib": [ "es6" ],
		"sourceMap": true
	},
	// "include": [
	// 	"src/*",
	// 	"../common/src/*"
	// ],
	"exclude": [
		"node_modules"
	]
}