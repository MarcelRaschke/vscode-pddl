{
	"compilerOptions": {
		//"strict": true,   /* enable all strict type-checking options */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,		
		"forceConsistentCasingInFileNames": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDirs": ["src", "test"],
		"outDir": "out",
		"lib": [ "es6" ],
		"sourceMap": true
	},
	"exclude": [
		"node_modules"
	]
}